@model AkademiPlusCQRS.CQRSPattern.Commands.CreateProductCommand
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<form method="post">
    <div class="container">
        <br /><br />
        <label>Ürüm Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Marka</label>
        <input type="text" class="form-control" asp-for="Brand" />
        <br />
        <label>Kategori</label>
        <input type="text" class="form-control" asp-for="Category" />
        <br />
        <label>Stok </label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
        <button class="btn btn-outline-primary">Ekle</button>
    </div>
</form>
